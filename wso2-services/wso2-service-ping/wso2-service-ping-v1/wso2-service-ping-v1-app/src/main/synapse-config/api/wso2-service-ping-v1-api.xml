<?xml version="1.0" encoding="UTF-8"?>
<api context="/services/ping" name="wso2-service-ping-v1-api" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="GET">
        <inSequence>
            <sequence key="wso2-service-ping-v1-seq"/>
            <loopback/>
        </inSequence>
        <outSequence>
            <respond/>
        </outSequence>
        <faultSequence>
            <payloadFactory media-type="json">
                <format>
                	{
                    	"result": "failed",
                    	"error-message": "$1"
                    }
                </format>
                <args>
                    <arg evaluator="xml" expression="$ctx:ERROR_MESSAGE"/>
                </args>
            </payloadFactory>
        </faultSequence>
    </resource>
</api>
